{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Frontend",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev",
			"cwd": "${workspaceFolder}/client-app",
			"serverReadyAction": {
				"pattern": "\\b(https?://localhost:\\d+)",
				"action": "openExternally"
			}
		},
		{
			"name": "Backend",
			"type": "node-terminal",
			"request": "launch",
			"command": "dotnet run",
			"cwd": "${workspaceFolder}/PetalBid.Api"
		},
		{
			"name": "Update Database",
			"type": "node-terminal",
			"request": "launch",
			"command": "dotnet ef database update",
			"cwd": "${workspaceFolder}/PetalBid.Api"
		},
		{
			"name": "npm install dependencies",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm i",
			"cwd": "${workspaceFolder}/client-app"
		},
		{
			"name": ".NET install dependencies",
			"type": "node-terminal",
			"request": "launch",
			"command": "dotnet restore",
			"cwd": "${workspaceFolder}/PetalBid.Api"
		},
		{
			"name": "Frontend Tests",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run test",
			"cwd": "${workspaceFolder}/client-app"
		},
		{
			"name": "Backend Tests",
			"type": "node-terminal",
			"request": "launch",
			"command": "dotnet test",
			"cwd": "${workspaceFolder}/PetalBid.Api.Tests"
		}
	],
	"compounds": [
		{
			"name": "Frontend+Backend",
			"configurations": [
				"Frontend",
				"Backend"
			]
		},
		{
			"name": "All Tests",
			"configurations": [
				"Frontend Tests",
				"Backend Tests"
			]
		}
	]
}
