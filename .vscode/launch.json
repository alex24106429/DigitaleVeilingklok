{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "React App",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev",
			"cwd": "${workspaceFolder}/client-app",
			"serverReadyAction": {
				"pattern": "\\b(https?://localhost:\\d+)",
				"action": "openExternally"
			}
		},
		{
			"name": "Backend API",
			"type": "node-terminal",
			"request": "launch",
			"command": "dotnet run",
			"cwd": "${workspaceFolder}/PetalBid.Api",
			"serverReadyAction": {
				"pattern": "Now listening on:\\s+https?://(?:localhost|\\[::\\]|0\\.0\\.0\\.0):(\\d+)",
				"uriFormat": "http://localhost:%s/swagger/index.html",
				"action": "openExternally"
			}
		}
	]
}